<local:BaseArrangableControl x:Class="RimWorld_ModsOrganizer.ModSetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RimWorld_ModsOrganizer"
             mc:Ignorable="d" KeyboardNavigation.IsTabStop="True" Focusable="True"
             d:DesignHeight="40" d:DesignWidth="300">
    <Border BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}">
        <Grid GotFocus="Grid_GotFocus" LostFocus="Grid_LostFocus">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <TextBlock Focusable="True" x:Name="modSetTB" Grid.Row="1" Grid.Column="1" Text="Unknown set" GotFocus="Grid_GotFocus" LostFocus="Grid_LostFocus" FontFamily="Calibri" FontSize="15"/>
        </Grid>
    </Border>
</local:BaseArrangableControl>
